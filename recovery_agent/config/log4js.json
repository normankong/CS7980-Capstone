{
  "appenders": {
    "access": {
      "type": "dateFile",
      "filename": "log/access.log",
      "pattern": "-yyyy-MM-dd",
      "category": "http"
    },
    "app": {
      "type": "file",
      "filename": "log/app.log",
      "maxLogSize": 10485760,
      "numBackups": 3
    },
    "errorFile": {
      "type": "file",
      "filename": "log/errors.log"
    },
    "errors": {
      "type": "logLevelFilter",
      "level": "ERROR",
      "appender": "errorFile"
    },
    "console" : {
      "type" : "console",
      "level": "DEBUG"
    }
  },
  "categories": {
    "default": { "appenders": ["app", "errors", "console"], "level": "INFO" },
    "http": { "appenders": ["access"], "level": "DEBUG" }
  }
}

